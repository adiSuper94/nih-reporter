{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "nodenext",
    "types": ["node"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  }
}
